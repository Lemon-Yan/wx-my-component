.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

.btn {
  width: 90%;
  margin: 10% auto 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background-color: #FF9400;
  border-radius: 10rpx;
}

.btn-default {
  width: 90%;
  margin: 10% auto 30rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333;
  border: solid #ccc 1rpx;
  border-radius: 10rpx;
}

.mt20 {
  margin-top: 20rpx;
}