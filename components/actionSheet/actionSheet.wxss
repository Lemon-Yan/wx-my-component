/* components/actionSheet/actionSheet.wxss */
/* action-sheet-module */
.action-sheet-module {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 3;
  background-color: rgba(0, 0, 0, 0.5);
}

.action-sheet-list {
  text-align: center;
  position: fixed;
  width: 100%;
  background-color: #fff;
  z-index: 3;
  bottom: 0;
}

.action-sheet-item {
  font-size: 34rpx;
  color: #333;
  width:100% !important;
  height: 110rpx;
  line-height: 110rpx;
  background-color: #fff;
  border-bottom: solid #f1f1f1 1rpx;
  padding: 0;
  font-weight: 500;
}

.action-sheet-item::after {
  border: none;
}

.action-sheet-cancel {
  border-top: solid #f1f1f1 10rpx;
  height: 110rpx;
  line-height: 110rpx;
  font-size: 34rpx;
}

.click-active {
  background-color: #f1f1f1;
}