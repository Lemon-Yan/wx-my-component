/* components/prompt/prompt.wxss */
.prompt-moduel {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  background-color: rgba(0, 0, 0, 0.5);
  overflow: hidden;
}

.prompt-wrapper {
  background-color: #fff;
  margin: 45% 10% 0 10%;
  border-radius: 10rpx;
}

.prompt-title {
  font-size: 32rpx;
  color: #333;
  display: block;
  text-align: center;
  font-weight: 700;
  padding: 40rpx 0;
}

.prompt-con {
  padding: 0 30rpx;
  height: 150rpx; 
}

.prompt-input {
  border: solid #f1f1f1 1rpx;
  padding: 15rpx;
  font-size: 32rpx;
  border-radius: 10rpx;
}

.err {
  font-size: 26rpx;
  color: #FF3A31;
  padding-top: 15rpx;
}

.foot-btn {
  display: flex;
  border-top: solid #f1f1f1 1rpx;
  height: 110rpx;
  line-height: 110rpx;
  text-align: center;
}

.prompt-btn {
  flex: 1;
  font-size: 34rpx;
  color: #333;
  font-weight: 600; 
}

.prompt-cancel {
  border-right: solid #f1f1f1 1rpx;
}

.prompt-confirm {
  color: #fd8501;
}