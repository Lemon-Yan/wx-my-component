/* components/downloadProgress/downloadProgress.wxss */
.download-module {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  /* background-color: rgba(0, 0, 0, 0.5); */
  overflow: hidden;
}

.download-wrapper {
  background-color: rgba(0, 0, 0, 0.6);
  width: 240rpx;
  height: 230rpx;
  position: fixed;
  top: 30%;
  left: 33%;
  text-align: center;
  border-radius: 10rpx;
}

.download-progress {
  margin: 50rpx auto 30rpx;
  font-size: 45rpx;
  color: #f8f8f8;
}

.download-tips {
  font-size: 30rpx;
  color: #fff;
}